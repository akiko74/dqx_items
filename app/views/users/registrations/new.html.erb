<h2>逆引きレシピへのユーザ登録</h2>

<%= form_for([resource, resource.with_character], :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.fields_for :characters do |character_form| %>
    <%= character_form.label :char_name %>
    <%= character_form.text_field :char_name %>
    <% end %>
  </div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
