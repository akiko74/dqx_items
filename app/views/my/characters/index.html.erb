<h1>Listing Characters</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @characters.each do |char| %>
  <tr>
    <td><%= char.char_name %></td>
    <td><%= link_to 'Show', my_character_path(char) %></td>
    <td><%= link_to 'Edit', edit_my_character_path(char) %></td>
    <td><%= link_to 'Destroy', my_character_path(char), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

